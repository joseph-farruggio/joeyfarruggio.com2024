---
import { Image } from "astro:assets";
import ProfileImage from "../../public/avatar.jpg";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-[#0A0A23]">
		<header class="absolute top-0 left-0 w-full z-10">
			<div
				class="max-w-screen-2xl mx-auto p-4 lg:flex lg:items-center lg:gap-8">
				<Image
					src={ProfileImage}
					alt="Joey Farruggio"
					class="rounded-xl w-16"
					loading="eager"
				/>

				<nav
					class="text-xl text-white lg:flex lg:items-center lg:gap-8">
					<a href="#">Joey Farruggio</a>
					<div class="h-8 w-px bg-white/10"></div>
					<a href="#">Blog</a>
					<a href="#">Development</a>
					<a href="#">Consulting</a>
				</nav>
			</div>
		</header>

		<slot />

		<footer class="pt-32">
			<div
				class="max-w-screen-2xl mx-auto p-4 lg:flex lg:items-center lg:gap-8">
				<Image
					src={ProfileImage}
					alt="Joey Farruggio"
					class="rounded-xl w-16"
				/>

				<nav
					class="text-xl text-white lg:flex lg:items-center lg:gap-8">
					<a href="#">Joey Farruggio</a>
					<div class="h-8 w-px bg-white/10"></div>
					<a href="#">Blog</a>
					<a href="#">Development</a>
					<a href="#">Consulting</a>
				</nav>
			</div>

			<div
				class="max-w-screen-2xl mx-auto p-4 lg:flex lg:items-center lg:gap-8">
				<p class="text-white">Contact me:</p>
				<a
					href="https://twitter.com/Joey_Farruggio"
					class="text-white/60 hover:text-white">@Joey_Farruggio</a
				>
				<a
					href="mailto:joey@joeyfarruggio.com"
					class="text-white/60 hover:text-white"
					>joey@joeyfarruggio.com</a
				>
				<a
					href="https://calendly.com/joey-farruggio/one-on-one-chat"
					class="text-white/60 hover:text-white"
					>Schedule a 1-on-1 call</a
				>
			</div>

			<script src="../scripts/app.js"></script>
		</footer>
	</body>
</html>
